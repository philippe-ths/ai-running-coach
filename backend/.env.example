# --- Core ---
APP_ENV=local
SECRET_KEY=dev-only-secret-change-me

# --- Database ---
# Matches docker-compose.yml defaults (host port 5433)
DATABASE_URL=postgresql+psycopg://coach:coach@localhost:5433/coach

# --- Jobs / Redis ---
REDIS_URL=redis://localhost:6379/0

# --- Server URLs ---
API_BASE_URL=http://localhost:8000
APP_BASE_URL=http://localhost:3000

# --- Strava OAuth ---
# Fill these in if you want to connect to Strava.
STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=
STRAVA_REDIRECT_URI=http://localhost:8000/api/auth/strava/callback

# --- Strava Webhooks (optional for local MVP) ---
STRAVA_WEBHOOK_VERIFY_TOKEN=dev-verify-token
STRAVA_WEBHOOK_CALLBACK_URL=http://localhost:8000/api/webhooks/strava


